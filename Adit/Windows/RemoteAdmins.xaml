<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adit.Windows"
        xmlns:Server="clr-namespace:Adit.Code.Server" x:Class="Adit.Windows.RemoteAdmins"
        mc:Ignorable="d"
        Title="Remote Administrators" Height="300" Width="500" Icon="/Adit;component/Assets/icons8-connect-64.ico" >
    <Window.DataContext>
        <Server:Authentication/>
    </Window.DataContext>
    <Grid>
        <DataGrid x:Name="datagridKeys" ItemsSource="{Binding Current.Keys, Mode=TwoWay}" CellEditEnding="DataGrid_CellEditEnding" Margin="0,0,0,45"/>
        <Button Content="New" FontWeight="Bold" Margin="0,0,65,10" Height="30" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{DynamicResource PrimaryButton}" Click="New_Click"/>
        <Button Content="Delete" Margin="0,0,10,10" Height="30" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Style="{DynamicResource PrimaryButton}" Click="Delete_Click"/>
    </Grid>
</Window>
