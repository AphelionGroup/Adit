<Page x:Class="Adit.Pages.ModeSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adit.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Install" Height="300" Width="300" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0,0,0,20" FontSize="18" FontFamily="Segoe UI Black">Select Mode</TextBlock>
            <Button Height="30" Width="50" Margin="0,0,0,10" Click="ClientButton_Click">Client</Button>
            <Button Height="30" Width="50" Margin="0,0,0,10">Server</Button>
            <Button Height="30" Width="50">Viewer</Button>
        </StackPanel>
    </Grid>
</Page>
